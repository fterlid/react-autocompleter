{
    "rules": {
        "strict": 2,
        "indent": [2, 4],
        "quotes": [2, "single"],
        "linebreak-style": [2, "windows"],
        "semi": [2, "always"],
        "no-var": 2,
        "arrow-spacing": 2,
        "keyword-spacing": [2, {"before": false, "after": true}],
        "space-before-blocks": 2,
        "react/jsx-uses-vars": 2
    },
    "env": {
        "es6": true,
        "browser": true,
        "jasmine": true
    },
    "extends": "eslint:recommended",
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    }
}